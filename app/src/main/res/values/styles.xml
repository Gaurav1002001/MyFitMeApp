<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="CustomTheme1" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="android:statusBarColor">@color/yoga_green_dark</item>
    </style>

    <style name="GoogleSignInButton">
        <item name="android:textSize">17sp</item>
        <item name="android:background">@drawable/com_facebook_button_background</item>
    </style>

    <style name="FacebookLoginButton">
        <item name="android:text">Continue with facebook</item>
        <item name="android:textSize">17sp</item>
        <item name="android:background">@color/com_facebook_messenger_blue</item>
        <item name="android:fontFamily">@font/open_sans</item>
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/dialog_enter</item>
        <item name="android:windowExitAnimation">@anim/dialog_exit</item>
    </style>

    <style name="CustomTheme" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="MyCustomRadioButton" parent="@android:style/TextAppearance">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@drawable/selectable_text_color_checked_state</item>
        <item name="android:gravity">left|center_horizontal|clip_horizontal</item>
        <item name="android:background">@drawable/selectable_text_bg_color_checked_state</item>
        <item name="android:fontFamily">@font/my_nunito</item>
        <item name="android:paddingStart">6dp</item>
        <item name="android:paddingEnd">6dp</item>
    </style>

    <style name="Theme.MyFitMeApp.AppBarOverlay1" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:backgroundTint">@drawable/bg_splash_yoga_gradient</item>
        <item name="tabIndicatorFullWidth">false</item>
    </style>

    <style name="Theme.MyFitMeApp.NoActionBar1" parent="@style/Theme.MyFitMeApp">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:statusBarColor">@color/teal_700</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="TextAppearance.App.TextInputLayout" parent="@android:style/TextAppearance">
        <item name="android:textSize">20sp</item>
        <item name="android:textColorHint">@color/darkgreen</item>
    </style>

    <style name="MainActivityTheme" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="android:statusBarColor" tools:targetApi="l">@android:color/transparent</item>
        <item name="android:fitsSystemWindows">false</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="Main_PageActivityTheme" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="AppBar_LayoutTextAppearance">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="AppBar_LayoutTextAppearance1">
        <item name="android:textSize">31sp</item>
    </style>

</resources>