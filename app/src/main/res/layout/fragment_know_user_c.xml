<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/buttonContinue"
        android:layout_alignParentTop="true"
        android:scrollbars="none"
        android:layout_marginTop="?actionBarSize">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:text="WHAT USUALLY HOLDS YOU BACK FROM WORKING OUT?"
                android:textColor="@color/black"
                android:textSize="30sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textview1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textview"
                android:padding="12dp"
                android:text="If we know your challenges, we can help you overcome them"
                android:textSize="16sp" />

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textview1"
                android:orientation="vertical"
                android:paddingStart="25dp"
                android:paddingTop="12dp"
                android:paddingEnd="25dp">

                <FrameLayout
                    android:id="@+id/button_frame1"
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:layout_weight="1"
                    android:background="@drawable/button_border">

                    <CheckBox
                        android:id="@+id/button_stayHealthy"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/selectable_text_bg_color_checked_state"
                        android:button="@null"
                        android:drawableStart="@drawable/ask_question_24"
                        android:paddingStart="15dp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="40dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:paddingStart="10dp"
                            android:paddingTop="5dp"
                            android:text="Too little knowledge"
                            android:textColor="@color/goodgrey"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:paddingStart="10dp"
                            android:paddingEnd="0dp"
                            android:paddingBottom="10dp"
                            android:text="I don&apos;t know what to do to improve my fitness"
                            android:textColor="@color/black"
                            android:textSize="13sp" />
                    </LinearLayout>
                </FrameLayout>

                <FrameLayout
                    android:id="@+id/button_frame2"
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/button_border">

                    <CheckBox
                        android:id="@+id/button_buildMuscle"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/selectable_text_bg_color_checked_state"
                        android:button="@null"
                        android:drawableStart="@drawable/flash_on_24"
                        android:paddingStart="15dp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="40dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:paddingStart="10dp"
                            android:paddingTop="5dp"
                            android:text="Not enough motivation"
                            android:textColor="@color/goodgrey"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:paddingStart="10dp"
                            android:paddingEnd="0dp"
                            android:paddingBottom="10dp"
                            android:text="I struggle to motivate myself to exercise"
                            android:textColor="@color/black"
                            android:textSize="13sp" />
                    </LinearLayout>
                </FrameLayout>

                <FrameLayout
                    android:id="@+id/button_frame3"
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/button_border">

                    <CheckBox
                        android:id="@+id/button_loseWeight"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/selectable_text_bg_color_checked_state"
                        android:button="@null"
                        android:drawableStart="@drawable/people_24"
                        android:paddingStart="15dp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="40dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:paddingStart="10dp"
                            android:paddingTop="5dp"
                            android:text="Missing support from others"
                            android:textColor="@color/goodgrey"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:paddingStart="10dp"
                            android:paddingEnd="0dp"
                            android:paddingBottom="10dp"
                            android:text="Team spirit and community help me progress"
                            android:textColor="@color/black"
                            android:textSize="13sp" />
                    </LinearLayout>
                </FrameLayout>

                <FrameLayout
                    android:id="@+id/button_frame4"
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/button_border">

                    <CheckBox
                        android:id="@+id/button_getFit"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/selectable_text_bg_color_checked_state"
                        android:button="@null"
                        android:drawableStart="@drawable/speaking_head_24"
                        android:paddingStart="15dp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="40dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:paddingStart="10dp"
                            android:paddingTop="5dp"
                            android:text="Not enough guidance"
                            android:textColor="@color/goodgrey"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:paddingStart="10dp"
                            android:paddingEnd="0dp"
                            android:paddingBottom="10dp"
                            android:text="I don&apos;t want to get it wrong, and don&apos;t know who to ask"
                            android:textColor="@color/black"
                            android:textSize="13sp" />
                    </LinearLayout>
                </FrameLayout>

                <FrameLayout
                    android:id="@+id/button_frame5"
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/button_border">

                    <CheckBox
                        android:id="@+id/button_busy"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/selectable_text_bg_color_checked_state"
                        android:button="@null"
                        android:drawableStart="@drawable/event_24"
                        android:paddingStart="15dp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="40dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:paddingStart="10dp"
                            android:paddingTop="5dp"
                            android:text="Busy Schedule"
                            android:textColor="@color/goodgrey"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:paddingStart="10dp"
                            android:paddingEnd="0dp"
                            android:paddingBottom="10dp"
                            android:text="I can never fid the time to work out"
                            android:textColor="@color/black"
                            android:textSize="13sp" />
                    </LinearLayout>
                </FrameLayout>

                <FrameLayout
                    android:id="@+id/button_frame6"
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/button_border">

                    <CheckBox
                        android:id="@+id/button_other"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/selectable_text_bg_color_checked_state"
                        android:button="@null"
                        android:drawableStart="@drawable/ellipsis_24"
                        android:paddingStart="15dp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="40dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:paddingStart="10dp"
                            android:paddingTop="5dp"
                            android:text="Other"
                            android:textColor="@color/goodgrey"
                            android:textSize="18sp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </FrameLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/editLoginWrapper"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:visibility="gone"
                    app:boxCornerRadiusBottomEnd="20dp"
                    app:boxCornerRadiusBottomStart="20dp"
                    app:boxCornerRadiusTopEnd="20dp"
                    app:boxCornerRadiusTopStart="20dp"
                    app:boxStrokeColor="@color/yoga_green_dark"
                    app:boxStrokeWidth="1dp"
                    app:hintTextAppearance="@style/TextInputLayout">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/editOther"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:hint="Other"
                        android:inputType="text"
                        android:maxLength="100"
                        android:padding="7dp"
                        android:textColor="#000000" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingStart="10dp"
                        android:paddingTop="3dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Characters left "
                            android:textColor="@color/black_70"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/counter"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>

    <Button
        android:id="@+id/buttonContinue"
        android:layout_width="260dp"
        android:layout_height="48dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/rounded_button"
        android:text="Next"
        android:textAllCaps="false"
        android:textColor="#fff"
        app:backgroundTint="@color/yoga_green"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>
