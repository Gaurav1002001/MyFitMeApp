<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/green_back"
        android:layout_width="match_parent"
        android:layout_height="260dp"
        android:background="@drawable/bg_splash_yoga_gradient">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="130dp"
            android:layout_alignParentEnd="true"
            android:src="@drawable/bg_me_top_yoga"
            android:visibility="visible" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/green_back"
        android:background="@color/gray_f2" />

    <LinearLayout
        android:id="@+id/topbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="50dp"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@drawable/ic_avatar_recent_login"
                    app:civ_border_color="@color/white"
                    app:civ_border_width="2dp" />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/profileImageView"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    app:civ_border_color="@color/white"
                    app:civ_border_width="2dp" />

            </RelativeLayout>

            <TextView
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:paddingLeft="5dp"
                android:textColor="@color/white"
                android:textSize="25sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="7dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="5dp"
                android:alpha="0.3"
                android:background="@drawable/view_backgorund"
                android:backgroundTint="@color/pin_normal" />

        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/relativelayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/topbar">

        <LinearLayout
            android:id="@+id/cardview"
            android:layout_width="300dp"
            android:layout_height="70dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/circularbordersolid_2"
            android:backgroundTint="@color/white"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <FrameLayout
                android:id="@+id/button_frame"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <Button
                    android:id="@+id/button_weight"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/rounded_button_3"
                    android:stateListAnimator="@null"
                    android:textColor="@color/black"
                    app:backgroundTint="@color/white" />

                <TextView
                    android:id="@+id/weight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="WEIGHT"
                    android:textColor="@color/goodgrey"
                    android:textSize="10sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|center_vertical|center_horizontal|center|start"
                    android:layout_marginLeft="11dp"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <View
                            android:id="@+id/view1"
                            android:layout_width="8dp"
                            android:layout_height="3dp"
                            android:layout_centerVertical="true"
                            android:alpha="0.8"
                            android:background="@color/pin_normal" />

                        <View
                            android:id="@+id/view2"
                            android:layout_width="10dp"
                            android:layout_height="2dp"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="13dp"
                            android:alpha="0.8"
                            android:background="@color/pin_normal" />

                        <TextView
                            android:id="@+id/display_weight"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/goodgrey"
                            android:textSize="20sp" />

                    </RelativeLayout>

                </LinearLayout>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|center_vertical|center_horizontal|center|end"
                    android:layout_marginEnd="10dp"
                    android:src="@drawable/ic_baseline_arrow_forward_ios_24" />

            </FrameLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="50dp"
                android:layout_gravity="center_vertical"
                android:alpha="0.4"
                android:background="@color/pin_normal" />

            <FrameLayout
                android:id="@+id/button_frame_2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/round_buttonborder">

                <Button
                    android:id="@+id/button_bmi"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/rounded_button_4"
                    android:stateListAnimator="@null"
                    android:textColor="@color/black"
                    app:backgroundTint="@color/white" />

                <TextView
                    android:id="@+id/bmi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="BMI"
                    android:textColor="@color/goodgrey"
                    android:textSize="10sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|center_vertical|center_horizontal|center|start"
                    android:layout_marginLeft="11dp"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <View
                            android:id="@+id/view3"
                            android:layout_width="8dp"
                            android:layout_height="3dp"
                            android:layout_centerVertical="true"
                            android:alpha="0.8"
                            android:background="@color/pin_normal" />

                        <View
                            android:id="@+id/view4"
                            android:layout_width="10dp"
                            android:layout_height="2dp"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="13dp"
                            android:alpha="0.8"
                            android:background="@color/pin_normal" />

                        <TextView
                            android:id="@+id/display_bmi"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/goodgrey"
                            android:textSize="20sp" />

                    </RelativeLayout>

                </LinearLayout>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|center_vertical|center_horizontal|center|end"
                    android:layout_marginEnd="10dp"
                    android:src="@drawable/ic_baseline_arrow_forward_ios_24" />

            </FrameLayout>

        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_below="@+id/relativelayout">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:textColor="@color/common_google_signin_btn_text_dark_focused"
                android:gravity="center_vertical"
                android:id="@+id/buttonProfile"
                android:layout_width="312dp"
                android:layout_height="50dp"
                android:text="Profile"
                android:textAllCaps="false"
                app:backgroundTint="@color/white"
                style="@style/Widget.AppCompat.Button.Borderless"/>

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_gravity="center_vertical"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/profile_pic"/>

        </LinearLayout>

        <View
            android:layout_gravity="center_horizontal"
            android:background="@color/pin_normal"
            android:layout_width="325dp"
            android:layout_height="1dp"
            android:layout_marginTop="7dp"
            android:alpha="0.1"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp">

            <Button
                android:textColor="@color/common_google_signin_btn_text_dark_focused"
                android:gravity="center_vertical"
                android:id="@+id/buttonFriends"
                android:layout_width="312dp"
                android:layout_height="50dp"
                android:text="Friends"
                android:textAllCaps="false"
                app:backgroundTint="@color/white"
                style="@style/Widget.AppCompat.Button.Borderless"/>

            <ImageView
                android:layout_gravity="center_vertical"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_me_friends"/>

        </LinearLayout>

        <View
            android:layout_gravity="center_horizontal"
            android:background="@color/pin_normal"
            android:layout_width="325dp"
            android:layout_height="1dp"
            android:layout_marginTop="7dp"
            android:alpha="0.1"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp">

            <Button
                android:textColor="@color/common_google_signin_btn_text_dark_focused"
                android:gravity="center_vertical"
                android:id="@+id/buttonAccount"
                android:layout_width="312dp"
                android:layout_height="50dp"
                android:text="Account"
                android:textAllCaps="false"
                app:backgroundTint="@color/white"
                style="@style/Widget.AppCompat.Button.Borderless"/>

            <ImageView
                android:layout_gravity="center_vertical"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_baseline_person_24"/>

        </LinearLayout>

        <View
            android:layout_gravity="center_horizontal"
            android:background="@color/pin_normal"
            android:layout_width="325dp"
            android:layout_height="1dp"
            android:layout_marginTop="7dp"
            android:alpha="0.1"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp">

            <Button
                android:textColor="@color/common_google_signin_btn_text_dark_focused"
                android:gravity="center_vertical"
                android:id="@+id/buttonReminder"
                android:layout_width="312dp"
                android:layout_height="50dp"
                android:text="Reminder"
                android:textAllCaps="false"
                app:backgroundTint="@color/white"
                style="@style/Widget.AppCompat.Button.Borderless"/>

            <ImageView
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_baseline_access_alarm_24"/>

        </LinearLayout>

        <View
            android:layout_gravity="center_horizontal"
            android:background="@color/pin_normal"
            android:layout_width="325dp"
            android:layout_height="1dp"
            android:layout_marginTop="7dp"
            android:alpha="0.1"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp">

            <Button
                android:textColor="@color/common_google_signin_btn_text_dark_focused"
                android:gravity="center_vertical"
                android:id="@+id/buttonAbout_Us"
                android:layout_width="312dp"
                android:layout_height="50dp"
                android:text="About Us"
                android:textAllCaps="false"
                app:backgroundTint="@color/white"
                style="@style/Widget.AppCompat.Button.Borderless"/>

            <ImageView
                android:layout_gravity="center_vertical"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_me_support"/>

        </LinearLayout>

        <View
            android:layout_gravity="center_horizontal"
            android:background="@color/pin_normal"
            android:layout_width="325dp"
            android:layout_height="1dp"
            android:layout_marginTop="7dp"
            android:alpha="0.1"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp">

            <Button
                android:textColor="@color/common_google_signin_btn_text_dark_focused"
                android:gravity="center_vertical"
                android:id="@+id/buttonRecommend"
                android:layout_width="312dp"
                android:layout_height="50dp"
                android:text="Recommend FitMe to friends"
                android:textAllCaps="false"
                app:backgroundTint="@color/white"
                style="@style/Widget.AppCompat.Button.Borderless"/>

            <ImageView
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_baseline_share_24"/>

        </LinearLayout>

        <View
            android:layout_gravity="center_horizontal"
            android:background="@color/pin_normal"
            android:layout_width="325dp"
            android:layout_height="1dp"
            android:layout_marginTop="7dp"
            android:alpha="0.1"/>

    </LinearLayout>

</RelativeLayout>
