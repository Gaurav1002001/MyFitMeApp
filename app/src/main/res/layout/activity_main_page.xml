<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/photo"
    android:fitsSystemWindows="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:fitsSystemWindows="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="32dp" >

            <androidx.viewpager.widget.ViewPager
                android:layout_gravity="center_horizontal"
                android:id="@+id/viewPager1"
                android:layout_width="300dp"
                android:layout_height="240dp"
                android:layout_marginTop="50dp"/>

            <com.tbuonomo.viewpagerdotsindicator.DotsIndicator
                android:layout_gravity="center"
                android:id="@+id/dots_indicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                app:dotsColor="@color/teal_200"
                app:dotsCornerRadius="8dp"
                app:dotsSize="5dp"
                app:dotsSpacing="3.5dp"
                app:dotsWidthFactor="2.5"
                app:progressMode="true"
                app:selectedDotColor="@color/white"/>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <Spinner
                    android:id="@+id/spinner2"
                    android:layout_width="115dp"
                    android:layout_height="41dp"
                    android:layout_marginStart="15dp"/>

                <EditText
                    android:id="@+id/phoneNumber"
                    android:textColor="@color/white"
                    android:layout_width="220dp"
                    android:layout_height="match_parent"
                    android:hint="Enter your mobile number"
                    android:ems="10"
                    android:inputType="number"/>

            </LinearLayout>

            <Button
                android:id="@+id/buttonSessions"
                android:textColor="#fff"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/rounded_button"
                android:layout_width="329dp"
                android:layout_height="45dp"
                android:layout_marginTop="10dp"
                android:text="CONTINUE"
                app:backgroundTint="@android:color/holo_red_light"/>

            <TextView
                android:textColor="@color/white"
                android:layout_gravity="center_horizontal"
                android:id="@+id/textView13"
                android:layout_width="341dp"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:text="By Continuing you agree to the Terms of services and Privacy policy"/>

            <Button
                android:id="@+id/buttonAccount"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/rounded_button"
                android:layout_width="329dp"
                android:layout_height="45dp"
                android:layout_marginTop="120dp"
                android:text="CONTINUE WITH   G  or  f"
                android:textAllCaps="false"
                app:backgroundTint="@color/white"/>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
