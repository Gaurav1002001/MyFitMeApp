<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/backToolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title="Training Plan" />

    <LinearLayout
        android:layout_below="@+id/backToolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="2.5dp"
            android:alpha="0.08"
            android:background="@color/pin_normal" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">

            <ImageView
                android:layout_width="318dp"
                android:layout_height="213dp"
                android:layout_marginTop="18dp"
                android:src="@drawable/med_" />

            <Button
                android:id="@+id/meditationButton"
                android:layout_width="318dp"
                android:layout_height="213dp"
                android:layout_marginTop="18dp"
                android:alpha="0" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">

            <ImageView
                android:layout_width="322dp"
                android:layout_height="210dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/yoga_" />

            <Button
                android:id="@+id/yogaButton"
                android:layout_width="322dp"
                android:layout_height="199dp"
                android:layout_marginTop="9.5dp"
                android:alpha="0" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">

            <ImageView
                android:layout_width="330dp"
                android:layout_height="165dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/gym_" />

            <Button
                android:id="@+id/gymButton"
                android:layout_width="330dp"
                android:layout_height="165dp"
                android:layout_gravity="center"
                android:layout_marginTop="4dp"
                android:alpha="0" />

        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>

