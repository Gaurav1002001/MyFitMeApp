<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="20dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Your Gender?"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:textStyle="bold" />

        <RadioGroup
            android:id="@+id/radioGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="40dp"
            android:orientation="horizontal">

            <com.example.myfitmeapp.MyRadioButton
                android:id="@+id/acrb_male"
                style="@style/MyCustomRadioButton"
                android:layout_width="150dp"
                android:layout_height="90dp"
                android:layout_marginEnd="12dp"
                android:background="@drawable/selectable_text_bg_color_checked_state"
                android:minWidth="70dp"
                android:paddingStart="6dp"
                android:paddingEnd="6dp"
                android:text="Male"
                android:textColor="@drawable/selectable_text_color_checked_state"
                android:textSize="18sp"
                android:gravity="center"/>

            <com.example.myfitmeapp.MyRadioButton
                android:id="@+id/acrb_female"
                style="@style/MyCustomRadioButton"
                android:layout_width="150dp"
                android:layout_height="90dp"
                android:layout_marginEnd="12dp"
                android:background="@drawable/selectable_text_bg_color_checked_state"
                android:minWidth="70dp"
                android:paddingStart="6dp"
                android:paddingEnd="6dp"
                android:text="Female"
                android:textColor="@drawable/selectable_text_color_checked_state"
                android:textSize="18sp"
                android:gravity="center"/>
        </RadioGroup>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="70dp"
            android:text="Date of Birth?"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/birthday"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/button_border"
            android:clickable="false"
            android:cursorVisible="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:hint="08/07/1990"
            android:padding="10dp"
            android:textColorHint="@color/goodgrey" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/goodgrey" />

        <Button
            android:id="@+id/btnNext"
            android:layout_width="329dp"
            android:layout_height="45dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/rounded_button"
            android:enabled="false"
            android:text="Next"
            android:textAllCaps="false"
            android:textColor="#fff"
            app:backgroundTint="@color/darkgreen" />
    </LinearLayout>
</RelativeLayout>
