<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <RelativeLayout
        android:id="@+id/internetLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbarExplore"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            app:title="Explore" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/toolbarExplore"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:layout_below="@+id/toolbarExplore"
                    android:alpha="0.1"
                    android:background="@color/pin_normal" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/greetText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="13dp"
                        android:layout_marginTop="5dp"
                        android:text="Hello"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/userName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:textAllCaps="true"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="13dp"
                    android:layout_marginTop="5dp"
                    android:text="Great job showing commitment to your goal."
                    android:textColor="@color/black" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="245dp"
                    android:layout_marginStart="13dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="10dp">

                    <ImageView
                        android:id="@+id/revive"
                        android:layout_width="wrap_content"
                        android:layout_height="245dp"/>

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="245dp"
                        android:background="@drawable/gradient_very_light" />

                    <ProgressBar
                        android:id="@+id/progress_bar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:visibility="visible" />

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:layout_below="@+id/toolbarExplore"
                    android:layout_marginTop="20dp"
                    android:alpha="0.1"
                    android:background="@color/pin_normal" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="13dp"
                    android:layout_marginTop="10dp"
                    android:text="WORKOUTS UNDER 15 MINUTES"
                    android:textColor="@color/black"
                    android:textSize="15sp" />

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="13dp"
                    android:layout_marginTop="-30dp"
                    android:layout_marginEnd="10dp"
                    android:scrollbars="none">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <ImageView
                                android:id="@+id/india"
                                android:layout_width="250dp"
                                android:layout_height="305dp" />

                            <Button
                                android:id="@+id/indiaButton"
                                android:layout_width="250dp"
                                android:layout_height="185dp"
                                android:layout_marginTop="40dp"
                                android:alpha="0" />

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginStart="12dp">

                            <ImageView
                                android:id="@+id/golf"
                                android:layout_width="250dp"
                                android:layout_height="305dp" />

                            <Button
                                android:id="@+id/golfButton"
                                android:layout_width="250dp"
                                android:layout_height="185dp"
                                android:layout_marginTop="40dp"
                                android:alpha="0" />

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginStart="12dp">

                            <ImageView
                                android:id="@+id/delta"
                                android:layout_width="250dp"
                                android:layout_height="305dp" />

                            <Button
                                android:id="@+id/deltaButton"
                                android:layout_width="250dp"
                                android:layout_height="185dp"
                                android:layout_marginTop="40dp"
                                android:alpha="0" />

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginStart="12dp">

                            <ImageView
                                android:id="@+id/echo"
                                android:layout_width="250dp"
                                android:layout_height="305dp" />

                            <Button
                                android:id="@+id/echoButton"
                                android:layout_width="250dp"
                                android:layout_height="185dp"
                                android:layout_marginTop="40dp"
                                android:alpha="0" />

                        </RelativeLayout>

                    </LinearLayout>

                </HorizontalScrollView>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:layout_below="@+id/toolbarExplore"
                    android:layout_marginTop="-30dp"
                    android:alpha="0.1"
                    android:background="@color/pin_normal" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="13dp"
                    android:layout_marginTop="10dp"
                    android:text="Yoga for women"
                    android:textColor="@color/black"
                    android:textSize="15sp" />

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="13dp"
                    android:layout_marginEnd="10dp"
                    android:scrollbars="none">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <ImageView
                                android:id="@+id/mother"
                                android:layout_width="250dp"
                                android:layout_height="150dp" />

                            <Button
                                android:id="@+id/motherhoodButton"
                                android:layout_width="250dp"
                                android:layout_height="150dp"
                                android:alpha="0" />

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginStart="12dp">

                            <ImageView
                                android:id="@+id/menstrual"
                                android:layout_width="250dp"
                                android:layout_height="150dp" />

                            <Button
                                android:id="@+id/menstrualButton"
                                android:layout_width="250dp"
                                android:layout_height="150dp"
                                android:alpha="0" />

                        </RelativeLayout>

                    </LinearLayout>

                </HorizontalScrollView>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:layout_below="@+id/toolbarExplore"
                    android:layout_marginTop="10dp"
                    android:alpha="0.1"
                    android:background="@color/pin_normal" />

                <TextView
                    android:layout_width="284dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="13dp"
                    android:layout_marginTop="10dp"
                    android:text="Better Life"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="13dp"
                    android:layout_marginTop="-5dp"
                    android:layout_marginEnd="10dp"
                    android:scrollbars="none">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <ImageView
                                android:id="@+id/soothing"
                                android:layout_width="250dp"
                                android:layout_height="150dp" />

                            <Button
                                android:id="@+id/soothingButton"
                                android:layout_width="250dp"
                                android:layout_height="150dp"
                                android:alpha="0" />

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginStart="12dp">

                            <ImageView
                                android:id="@+id/breathing"
                                android:layout_width="250dp"
                                android:layout_height="150dp" />

                            <Button
                                android:id="@+id/breathingButton"
                                android:layout_width="250dp"
                                android:layout_height="150dp"
                                android:alpha="0" />

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginStart="12dp">

                            <ImageView
                                android:id="@+id/morning"
                                android:layout_width="250dp"
                                android:layout_height="150dp" />

                            <Button
                                android:id="@+id/morningButton"
                                android:layout_width="250dp"
                                android:layout_height="150dp"
                                android:alpha="0" />

                        </RelativeLayout>

                    </LinearLayout>

                </HorizontalScrollView>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:layout_marginTop="10dp"
                    android:alpha="0.1"
                    android:background="@color/pin_normal" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="13dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    app:cardCornerRadius="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="170dp">

                            <ImageView
                                android:id="@+id/nutritionButton"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent" />

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="245dp"
                                android:background="@drawable/gradient_very_light"/>

                            <ProgressBar
                                android:id="@+id/progress_bar2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:visibility="visible" />

                        </RelativeLayout>



                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="20dp"
                            android:layout_marginTop="15dp"
                            android:text="HEALTH &amp; NUTRITION"
                            android:textColor="@color/black"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="20dp"
                            android:layout_marginTop="12dp"
                            android:layout_marginEnd="15dp"
                            android:layout_marginBottom="20dp"
                            android:text="Maximize your training results with valuable health and nutrition tips!"
                            android:textColor="@color/black_80"
                            android:textSize="15sp" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:layout_below="@+id/toolbarExplore"
                    android:layout_marginTop="20dp"
                    android:alpha="0.1"
                    android:background="@color/pin_normal" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="13dp"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="284dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="Meditation"
                        android:textColor="@color/black"
                        android:textSize="18sp" />

                    <ImageButton
                        android:id="@+id/forwardButton"
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_baseline_arrow_forward_ios_24" />

                </LinearLayout>

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="13dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="7dp"
                    android:layout_marginBottom="5dp"
                    android:scrollbars="none">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <de.hdodenhof.circleimageview.CircleImageView
                                android:id="@+id/stay_circle"
                                android:layout_width="110dp"
                                android:layout_height="105dp"
                                android:src="@drawable/stay_circle" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/stay_circle"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="10dp"
                                android:text="Stay in the\n moment"
                                android:textSize="13sp" />

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="15dp">

                            <de.hdodenhof.circleimageview.CircleImageView
                                android:id="@+id/body_circle"
                                android:layout_width="110dp"
                                android:layout_height="105dp"
                                android:src="@drawable/body_circle" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/body_circle"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="10dp"
                                android:gravity="center_horizontal"
                                android:text="Body\n Awareness"
                                android:textSize="13sp" />

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="15dp">

                            <de.hdodenhof.circleimageview.CircleImageView
                                android:id="@+id/breathing_circle"
                                android:layout_width="110dp"
                                android:layout_height="105dp"
                                android:src="@drawable/breathing_circle" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/breathing_circle"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="10dp"
                                android:gravity="center_horizontal"
                                android:text="Breathing\n Meditation"
                                android:textSize="13sp" />

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="15dp">

                            <de.hdodenhof.circleimageview.CircleImageView
                                android:id="@+id/training_circle"
                                android:layout_width="110dp"
                                android:layout_height="105dp"
                                android:src="@drawable/training_circle" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/training_circle"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="10dp"
                                android:gravity="center_horizontal"
                                android:text="Training\n Awareness"
                                android:textSize="13sp" />

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="15dp">

                            <de.hdodenhof.circleimageview.CircleImageView
                                android:id="@+id/accepting_circle"
                                android:layout_width="110dp"
                                android:layout_height="105dp"
                                android:src="@drawable/accepting_circle" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/accepting_circle"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="10dp"
                                android:gravity="center_horizontal"
                                android:text="Accepting\n Emotions"
                                android:textSize="13sp" />

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="15dp">

                            <de.hdodenhof.circleimageview.CircleImageView
                                android:id="@+id/cultivative_circle"
                                android:layout_width="110dp"
                                android:layout_height="105dp"
                                android:src="@drawable/cultivative_circle" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/cultivative_circle"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="10dp"
                                android:gravity="center_horizontal"
                                android:text="Cultivative\n Patience"
                                android:textSize="13sp" />

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="15dp">

                            <de.hdodenhof.circleimageview.CircleImageView
                                android:id="@+id/connect_circle"
                                android:layout_width="110dp"
                                android:layout_height="105dp"
                                android:src="@drawable/connect_circle" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/connect_circle"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="10dp"
                                android:gravity="center_horizontal"
                                android:text="Connect to life"
                                android:textSize="13sp" />

                        </RelativeLayout>

                    </LinearLayout>

                </HorizontalScrollView>

            </LinearLayout>

        </ScrollView>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/noInternetLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:gravity="center">

        <ImageView
            android:id="@+id/no_internet_image"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="128dp"
            android:src="@drawable/img_emptystates_networkerror" />

        <TextView
            android:id="@+id/no_internet_heading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/no_internet_image"
            android:layout_centerHorizontal="true"
            android:text="Network Error"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/no_internet_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/no_internet_heading"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="Please check your network"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/try_again_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/no_internet_text"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:backgroundTint="@color/teal_200"
            android:paddingHorizontal="32dp"
            android:text="Try Again"
            android:textAllCaps="false"
            app:cornerRadius="24dp" />

    </RelativeLayout>

</RelativeLayout>
